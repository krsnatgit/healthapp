    <script>
        // Load game data
        let activities = JSON.parse(localStorage.getItem('activities')) || [];
        let userData = JSON.parse(localStorage.getItem('userData')) || {
            level: 1,
            xp: 0,
            totalActivities: 0,
            streak: 0,
            lastActivityDate: null
        };
        
        // XP system
        const XP_PER_LEVEL = 100;
        const XP_PER_ACTIVITY = 25;
        const XP_PER_MINUTE = 1;
        
        // Initialize game
        updatePlayerStats();
        displayActivities();
        
        // Restore user health data
        if (userData.weight) document.getElementById('weight').value = userData.weight;
        if (userData.height) document.getElementById('height').value = userData.height;
        if (userData.currentBMI) calculateBMI();
        
        function updatePlayerStats() {
            document.getElementById('playerLevel').textContent = userData.level || 1;
            document.getElementById('totalActivities').textContent = userData.totalActivities || 0;
            document.getElementById('streakDays').textContent = userData.streak || 0;
            
            const currentXP = userData.xp || 0;
            const nextLevel = XP_PER_LEVEL * userData.level;
            const progress = (currentXP / nextLevel) * 100;
            
            document.getElementById('currentXP').textContent = currentXP;
            document.getElementById('nextLevelXP').textContent = nextLevel;
            document.getElementById('xpFill').style.width = progress + '%';
        }
        
        function gainXP(amount) {
            userData.xp += amount;
            const nextLevel = XP_PER_LEVEL * userData.level;
            
            if (userData.xp >= nextLevel) {
                userData.level++;
                userData.xp -= nextLevel;
                showLevelUp();
            }
            
            saveUserData();
            updatePlayerStats();
        }
        
        function showLevelUp() {
            const notification = document.createElement('div');
            notification.className = 'level-up-notification';
            notification.innerHTML = `
                <div class="level-up-text">LEVEL UP!</div>
                <div style="font-size: 4rem; margin: 20px 0;">üéâ</div>
                <div style="font-family: 'Press Start 2P', cursive; font-size: 1.2rem; color: var(--dark);">
                    Level ${userData.level}
                </div>
            `;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }
        
        function calculateBMI() {
            const weight = parseFloat(document.getElementById('weight').value);
            const height = parseFloat(document.getElementById('height').value) / 100;
            
            if (!weight || !height || weight <= 0 || height <= 0) {
                alert('‚ö†Ô∏è Please enter valid stats!');
                return;
            }
            
            const bmi = (weight / (height * height)).toFixed(1);
            let category, categoryClass, description, icon;
            
            if (bmi < 18.5) {
                category = 'Lightweight Class';
                categoryClass = 'underweight';
                description = 'Time to power up! Eat well and train hard.';
                icon = 'üå±';
            } else if (bmi < 25) {
                category = 'Champion Status';
                categoryClass = 'normal';
                description = 'Perfect balance achieved! Keep defending your title!';
                icon = 'üëë';
            } else if (bmi < 30) {
                category = 'Tank Build';
                categoryClass = 'overweight';
                description = 'Strong foundation! Train harder to unlock agility boost.';
                icon = 'üõ°Ô∏è';
            } else {
                category = 'Heavy Armor';
                categoryClass = 'obese';
                description = 'Time for an epic transformation quest! You got this!';
                icon = '‚öîÔ∏è';
            }
            
            const resultDiv = document.getElementById('bmiResult');
            resultDiv.className = `achievement-badge ${categoryClass}`;
            resultDiv.innerHTML = `
                <div class="badge-icon">${icon}</div>
                <div class="badge-title">${bmi}</div>
                <div style="font-weight: 900; font-size: 1.1rem; margin: 10px 0;">${category}</div>
                <div class="badge-description">${description}</div>
            `;
            resultDiv.style.display = 'block';
            
            document.getElementById('goalPanel').style.display = 'block';
            
            userData.weight = weight;
            userData.height = height * 100;
            userData.currentBMI = bmi;
            saveUserData();
            
            gainXP(15);
            
            if (userData.targetWeight) {
                updateProgress();
            }
        }
        
        function setGoal() {
            const targetWeight = parseFloat(document.getElementById('targetWeight').value);
            const currentWeight = parseFloat(document.getElementById('weight').value);
            
            if (!targetWeight || !currentWeight || targetWeight <= 0) {
                alert('‚ö†Ô∏è Please enter a valid target weight!');
                return;
            }
            
            userData.targetWeight = targetWeight;
            userData.startWeight = currentWeight;
            saveUserData();
            
            updateProgress();
            gainXP(20);
            
            alert('üéØ Quest Accepted! Your journey begins now!');
        }
        
        function updateProgress() {
            const currentWeight = parseFloat(document.getElementById('weight').value);
            const targetWeight = userData.targetWeight;
            const startWeight = userData.startWeight;
            
            if (!targetWeight || !startWeight) return;
            
            const totalChange = Math.abs(targetWeight - startWeight);
            const currentChange = Math.abs(currentWeight - startWeight);
            const progress = Math.min((currentChange / totalChange) * 100, 100);
            
            const remaining = Math.abs(targetWeight - currentWeight).toFixed(1);
            
            document.getElementById('progressPanel').style.display = 'block';
            document.getElementById('questProgress').style.width = progress + '%';
            document.getElementById('currentWeight').textContent = `Current: ${currentWeight} kg`;
            document.getElementById('remainingWeight').textContent = `To Goal: ${remaining} kg`;
        }
        
        function addActivity() {
            const activityType = document.getElementById('activityType').value;
            const duration = parseInt(document.getElementById('duration').value);
            const calories = parseInt(document.getElementById('calories').value);
            const notes = document.getElementById('notes').value;
            
            if (!activityType || !duration || duration <= 0) {
                alert('‚ö†Ô∏è Please select an activity and duration!');
                return;
            }
            
            const activity = {
                id: Date.now(),
                type: activityType,
                duration: duration,
                calories: calories || 0,
                notes: notes,
                date: new Date().toISOString(),
                xpEarned: XP_PER_ACTIVITY + (duration * XP_PER_MINUTE)
            };
            
            activities.unshift(activity);
            localStorage.setItem('activities', JSON.stringify(activities));
            
            // Update user stats
            userData.totalActivities++;
            updateStreak();
            
            // Award XP
            gainXP(activity.xpEarned);
            
            // Clear form
            document.getElementById('activityType').value = '';
            document.getElementById('duration').value = '';
            document.getElementById('calories').value = '';
            document.getElementById('notes').value = '';
            
            displayActivities();
            
            // Show success message
            alert(`üéâ Quest Complete! +${activity.xpEarned} XP!`);
        }
        
        function updateStreak() {
            const today = new Date().toDateString();
            const lastActivity = userData.lastActivityDate ? new Date(userData.lastActivityDate).toDateString() : null;
            
            if (lastActivity === today) {
                return; // Already logged today
            }
            
            const yesterday = new Date(Date.now() - 86400000).toDateString();
            
            if (lastActivity === yesterday) {
                userData.streak++;
            } else if (lastActivity !== today) {
                userData.streak = 1;
            }
            
            userData.lastActivityDate = new Date().toISOString();
            saveUserData();
            updatePlayerStats();
        }
        
        function displayActivities() {
            const listDiv = document.getElementById('activityList');
            
            if (activities.length === 0) {
                listDiv.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">üó∫Ô∏è</div>
                        <p class="empty-text">Your adventure begins here!<br><br>Complete quests to gain XP</p>
                    </div>
                `;
                return;
            }
            
            listDiv.innerHTML = activities.map(activity => {
                const date = new Date(activity.date);
                const formattedDate = date.toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
                
                return `
                    <div class="loot-item">
                        <div class="loot-info">
                            <div class="loot-name">${activity.type}</div>
                            <div class="loot-stats">
                                ‚è±Ô∏è ${activity.duration} mins
                                ${activity.calories ? ` ‚Ä¢ üî• ${activity.calories} cal` : ''}
                                ${activity.notes ? ` ‚Ä¢ üìù ${activity.notes}` : ''}
                            </div>
                            <div class="loot-date">${formattedDate}</div>
                        </div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div class="loot-xp">+${activity.xpEarned} XP</div>
                            <button class="delete-btn" onclick="deleteActivity(${activity.id})">‚úï</button>
                        </div>
                    </div>
                `;
            }).join('');
        }
        
        function deleteActivity(id) {
            if (confirm('üóëÔ∏è Delete this quest from history?')) {
                const activity = activities.find(a => a.id === id);
                activities = activities.filter(activity => activity.id !== id);
                localStorage.setItem('activities', JSON.stringify(activities));
                
                // Decrease total activities
                userData.totalActivities = Math.max(0, userData.totalActivities - 1);
                saveUserData();
                updatePlayerStats();
                
                displayActivities();
            }
        }
        
        function saveUserData() {
            localStorage.setItem('userData', JSON.stringify(userData));
        }
    </script>
</body>
</html>
